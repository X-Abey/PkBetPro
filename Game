Spinning...'; document.getElementById('slotWinAmount').textContent = ''; // Stop reels with delay setTimeout(() => stopReel(reels[0], 1), 500); setTimeout(() => stopReel(reels[1], 2), 800); setTimeout(() => stopReel(reels[2], 3), 1100); } function stopReel(reel, reelNumber) { reel.classList.remove('spinning'); const symbols = ['üçí', '7Ô∏è‚É£', 'üíé', '‚≠êÔ∏è', 'üîî', 'üçÄ']; const symbol = symbols[Math.floor(Math.random() * symbols.length)]; reel.textContent = symbol; if (reelNumber === 3) { calculateResult(); } } function calculateResult() { const symbols = [ document.getElementById('reel1').textContent, document.getElementById('reel2').textContent, document.getElementById('reel3').textContent ]; let winMultiplier = 0; let winMessage = ''; // Check for three matching symbols if (symbols[0] === symbols[1] && symbols[1] === symbols[2]) { if (symbols[0] === 'üçí') winMultiplier = 50; else if (symbols[0] === '7Ô∏è‚É£') winMultiplier = 100; else if (symbols[0] === 'üíé') winMultiplier = 30; else if (symbols[0] === '‚≠êÔ∏è') winMultiplier = 25; else if (symbols[0] === 'üîî') winMultiplier = 20; else winMultiplier = 15; winMessage = `JACKPOT! 3x ${symbols[0]}`; } else if (symbols[0] === symbols[1] || symbols[1] === symbols[2] || symbols[0] === symbols[2]) { // Two matching symbols winMultiplier = 2; winMessage = '2 Matching Symbols!'; } if (winMultiplier > 0) { const winAmount = currentBet * winMultiplier; userBalance += winAmount; document.getElementById('slotBalance').textContent = `PKR ${userBalance.toLocaleString('en-PK', {minimumFractionDigits: 2})}`; document.getElementById('slotResult').textContent = winMessage; document.getElementById('slotWinAmount').textContent = `You won PKR ${winAmount.toLocaleString('en-PK', {minimumFractionDigits: 2})}!`; // Add celebration effect document.getElementById('slotWinAmount').classList.add('pulse'); } else { document.getElementById('slotResult').textContent = 'No win this time. Try again!'; document.getElementById('slotWinAmount').textContent = ''; } } function toggleAutoSpin() { const autoSpinBtn = document.getElementById('autoSpinBtn'); if (isAutoSpinning) { clearInterval(autoSpinInterval); autoSpinBtn.innerHTML = '<i class="fas fa-sync"></i> Auto Spin'; autoSpinBtn.style.background = ''; isAutoSpinning = false; } else { if (userBalance < currentBet * 10) { alert('Need at least 10x bet amount for auto spin!'); return; } autoSpinBtn.innerHTML = '<i class="fas fa-stop"></i> Stop Auto Spin'; autoSpinBtn.style.background = 'var(--accent-red)'; isAutoSpinning = true; autoSpinInterval = setInterval(() => { if (userBalance >= currentBet) { spinSlot(); } else { toggleAutoSpin(); alert('Auto spin stopped! Insufficient balance.'); } }, 2000); } } // ========== Dashboard Functions ========== function showDashboard() { dashboardSection.classList.add('active'); window.scrollTo({ top: dashboardSection.offsetTop - 80, behavior: 'smooth' }); document.querySelectorAll('.nav-links a').forEach(a => a.classList.remove('active')); dashboardLink.classList.add('active'); userBalanceElement.textContent = `PKR ${userBalance.toLocaleString('en-PK', {minimumFractionDigits: 2})}`; } function updateGameHistoryDisplay() { gameHistoryElement.innerHTML = ''; gameHistory.forEach(game => { const row = document.createElement('tr'); row.style.borderBottom = '1px solid rgba(255,255,255,0.1)'; row.innerHTML = ` <td style="padding: 20px;">${game.game}</td> <td style="padding: 20px;">${game.date}</td> <td style="padding: 20px;">${game.bet}</td> <td style="padding: 20px; color: ${game.result === 'Win' ? 'var(--accent-green)' : 'var(--accent-red)'}; font-weight: bold;">${game.result}</td> <td style="padding: 20px; color: ${game.profit.startsWith('+') ? 'var(--accent-green)' : 'var(--accent-red)'}; font-weight: bold;">${game.profit}</td> `; gameHistoryElement.appendChild(row); }); } // ========== Event Listeners ========== function setupEventListeners() { // Navigation document.querySelectorAll('.nav-links a').forEach(link