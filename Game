= SSL Simulation ========== function simulateSSLHandshake() { setTimeout(() => { securityBadge.innerHTML = '<i class="fas fa-sync fa-spin"></i> <span>Establishing secure connection...</span>'; securityBadge.style.background = 'linear-gradient(135deg, #ff6b35, #ff8c42)'; setTimeout(() => { securityBadge.innerHTML = '<i class="fas fa-check-circle"></i> <span>SSL/TLS Connection Secured</span>'; securityBadge.style.background = 'linear-gradient(135deg, var(--accent-green), #00ff88)'; setTimeout(() => { securityBadge.innerHTML = '<i class="fas fa-lock"></i> <span>SSL/TLS Secured</span>'; securityBadge.style.background = 'linear-gradient(135deg, var(--primary-color), var(--accent-green))'; }, 2000); }, 1500); }, 1000); } // ========== Initialize Everything ========== window.addEventListener('DOMContentLoaded', init); 
